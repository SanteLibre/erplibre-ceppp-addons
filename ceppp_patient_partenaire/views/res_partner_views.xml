<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_res_partner_filter" model="ir.ui.view">
            <field name="name">res.partner.patient</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='type_company']" position="after">
                    <separator/>
                    <filter string="Patients" name="patient" domain="[('patient','=',True)]"/>
                    <filter string="Recruteurs" name="recruteur" domain="[('recruteur','=',True)]"/>
                    <filter string="Affiliations" name="affiliation" domain="[('affiliation','=',True)]"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
