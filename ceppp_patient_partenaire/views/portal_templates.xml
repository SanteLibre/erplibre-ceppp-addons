<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
        id="portal_my_details_affiliation"
        name="My affiliation portail my details"
        inherit_id="portal.portal_my_details"
    >
        <xpath expr="//label[@for='company_name']" position="replace">
            <label class="col-form-label label-optional" for="company_name">Centre de recrutement</label>
        </xpath>
    </template>

    <template id="portal_layout_mon_consentement" name="Mon consentement" inherit_id="portal.portal_layout">
        <xpath expr="//div[hasclass('o_portal_my_details')]" position="after">
            <t t-if="is_patient">
                <br />
                <div>
                    <h4>Mon consentement</h4>
                    <hr class="mt-1 mb-0" />
                    <a role="button" href="/Attachments" class="btn btn-sm btn-link" style="text-align:left;">
                        <i class="fa fa-eye" />
                        Voir mes consentements
                        <br />
                        <i class="fa fa-check" t-if="consentement_notification" />
                        <i class="fa fa-thumbs-o-down" t-if="not consentement_notification" />
                        Notification
                        <br />
                        <i class="fa fa-check" t-if="consentement_recrutement" />
                        <i class="fa fa-thumbs-o-down" t-if="not consentement_recrutement" />
                        Recrutement
                        <br />
                        <i class="fa fa-check" t-if="consentement_recherche" />
                        <i class="fa fa-thumbs-o-down" t-if="not consentement_recherche" />
                        Recherche
                        <br />
                    </a>
                </div>
            </t>
        </xpath>
    </template>

    <template id="portal_my_details_all_bold" name="All details bold" inherit_id="portal.portal_my_details">
        <xpath expr="//label[hasclass('label-optional')]" position="attributes">
            <attribute name="class">col-form-label</attribute>
        </xpath>
        <xpath expr="//label[hasclass('label-optional')]" position="attributes">
            <attribute name="class">col-form-label</attribute>
        </xpath>
        <xpath expr="//label[hasclass('label-optional')]" position="attributes">
            <attribute name="class">col-form-label</attribute>
        </xpath>
        <xpath expr="//label[hasclass('label-optional')]" position="attributes">
            <attribute name="class">col-form-label</attribute>
        </xpath>
    </template>
</odoo>
