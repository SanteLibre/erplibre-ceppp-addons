<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!--Root menu-->

    <menuitem
            id="menu_ceppp_patient_partenaire"
            name="Ceppp Patient Partenaire"
            sequence="20"
            web_icon="ceppp_patient_partenaire,static/description/icon.png"
    />

    <!--Sub menu-->

    <menuitem id="menu_patient" name="Patient" sequence="1" action="ceppp_patient_patient_action_window" parent="menu_ceppp_patient_partenaire"/>
    <menuitem id="menu_recruteur" name="Recruteur" sequence="2" action="ceppp_recruteur_recruteur_action_window" parent="menu_ceppp_patient_partenaire"/>
    <menuitem id="menu_configuration" name="Configuration" sequence="3" parent="menu_ceppp_patient_partenaire"/>

    <!--Child menu-->

    <menuitem
            id="menu_competence"
            name="Competence"
            action="ceppp_competence_competence_action_window"
            sequence="1"
            parent="menu_configuration"
    />

    <menuitem
            id="menu_formation"
            name="Formation"
            action="ceppp_formation_formation_action_window"
            sequence="2"
            parent="menu_configuration"
    />

    <menuitem
            id="menu_implication"
            name="Implication"
            action="ceppp_implication_implication_action_window"
            sequence="3"
            parent="menu_configuration"
    />

    <menuitem id="menu_langue" name="Langue" action="ceppp_langue_langue_action_window" sequence="4" parent="menu_configuration"/>

    <menuitem id="menu_maladie_label" name="Maladie" parent="menu_configuration" sequence="5"/>

    <menuitem
            id="menu_chapitre_maladie"
            name="Chapitre maladie"
            action="ceppp_chapitre_maladie_chapitre_maladie_action_window"
            sequence="1"
            parent="menu_maladie_label"
    />

    <menuitem
            id="menu_maladie"
            name="Maladie"
            action="ceppp_maladie_maladie_action_window"
            sequence="2"
            parent="menu_maladie_label"
    />

    <menuitem
            id="menu_mode_communication_privilegie"
            name="Mode communication privilegie"
            action="ceppp_mode_communication_privilegie_mode_communication_privilegie_action_window"
            sequence="7"
            parent="menu_configuration"
    />

    <menuitem
            id="menu_occupation"
            name="Occupation"
            action="ceppp_occupation_occupation_action_window"
            sequence="8"
            parent="menu_configuration"
    />

    <record model="ir.ui.menu" id="contacts.menu_contacts">
        <!-- Replace all group in contacts.menu_contacts -->
        <field name="groups_id"
               eval="[(6,0,[ref('base.group_partner_manager'), ref('group_ceppp_patient_partenaire_manager')])]"/>
    </record>

</odoo>
