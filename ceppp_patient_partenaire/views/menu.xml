<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!--Root menu-->

    <menuitem
            id="ceppp_patient_partenaire"
            name="Ceppp Patient Partenaire"
            sequence="20"
            web_icon="ceppp_patient_partenaire,static/description/icon.png"
    />

    <!--Sub menu-->

    <menuitem id="patient" name="Patient" sequence="1" action="ceppp_patient_patient_action_window" parent="ceppp_patient_partenaire"/>
    <!--    <menuitem id="recruteur" name="Recruteur" sequence="2" parent="ceppp_patient_partenaire"/>-->
    <menuitem id="configuration" name="Configuration" sequence="3" parent="ceppp_patient_partenaire"/>

    <!--Child menu-->

    <menuitem
            id="competence"
            name="Competence"
            action="ceppp_competence_competence_action_window"
            sequence="1"
            parent="configuration"
    />

    <menuitem
            id="formation"
            name="Formation"
            action="ceppp_formation_formation_action_window"
            sequence="2"
            parent="configuration"
    />

    <menuitem
            id="implication"
            name="Implication"
            action="ceppp_implication_implication_action_window"
            sequence="3"
            parent="configuration"
    />

    <menuitem id="langue" name="Langue" action="ceppp_langue_langue_action_window" sequence="4" parent="configuration"/>

    <menuitem
            id="maladie_proche_aidant"
            name="Maladie proche aidant"
            action="ceppp_maladie_proche_aidant_maladie_proche_aidant_action_window"
            sequence="5"
            parent="menu"
    />

    <menuitem
            id="maladie_soi_meme"
            name="Maladie soi meme"
            action="ceppp_maladie_soi_meme_maladie_soi_meme_action_window"
            sequence="6"
            parent="menu"
    />

    <menuitem
            id="mode_communication_privilegie"
            name="Mode communication privilegie"
            action="ceppp_mode_communication_privilegie_mode_communication_privilegie_action_window"
            sequence="7"
            parent="configuration"
    />

    <menuitem
            id="occupation"
            name="Occupation"
            action="ceppp_occupation_occupation_action_window"
            sequence="8"
            parent="configuration"
    />

    <record model="ir.ui.menu" id="contacts.menu_contacts">
        <!-- Replace all group in contacts.menu_contacts -->
        <field name="groups_id"
               eval="[(6,0,[ref('base.group_partner_manager'), ref('group_ceppp_patient_partenaire_manager')])]"/>
    </record>

</odoo>
