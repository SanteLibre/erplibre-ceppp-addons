<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="portal_create_ceppp_formation" name="Create Ceppp Formation">
        <t t-call="portal.portal_layout">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h1 class="text-center">Send a new ceppp formation</h1>
                    </div>
                </div>
            </div>
            <form
                action="/submitted/ceppp_formation"
                method="POST"
                class="form-horizontal mt32"
                enctype="multipart/form-data"
            >
                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                <div class="form-group">
                    <label class="col-md-3 col-sm-4 control-label" for="name">Name</label>
                    <div class="col-md-7 col-sm-8">
                        <input type="text" class="form-control" name="name" t-attf-value="#{name}" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 col-sm-4 control-label" for="date">Date</label>
                    <div class="col-md-7 col-sm-8">
                        <div class="input-group date" data-target-input="nearest" t-att-id="date_datepicker">
                            <input
                                type="text"
                                class="form-control datetimepicker-input"
                                t-att-data-target="date_datepicker"
                                t-att-name="prefix"
                                t-att-value="default_date"
                            />
                            <div
                                class="input-group-append"
                                t-att-data-target="date_datepicker"
                                data-toggle="datetimepicker"
                            >
                                <div class="input-group-text">
                                    <i class="fa fa-calendar" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 col-sm-4 control-label" for="organisation">Organisation</label>
                    <div class="col-md-7 col-sm-8">
                        <input
                            type="text"
                            class="form-control"
                            name="organisation"
                            t-att-value="default_organisation"
                        />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 col-sm-4 control-label" for="recruteur_id">Recruteur_id</label>
                    <div class="col-md-7 col-sm-8">
                        <select class="form-control" id="recruteur_id" name="recruteur_id">
                            <t t-foreach="recruteur_id" t-as="rec">
                                <option t-attf-value="#{rec.id}" t-att-selected="default_recruteur_id == rec.id">
                                    <t t-esc="rec.name" />
                                </option>
                            </t>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 col-sm-4 control-label" for="titre_formation">Titre_formation</label>
                    <div class="col-md-7 col-sm-8">
                        <t t-foreach="titre_formation" t-as="tit">
                            <input
                                type="checkbox"
                                name="titre_formation"
                                t-att-id="'titre_formation_' + tit.name + '_' + str(tit_index)"
                                t-att-value="tit.id"
                                t-att-checked="tit.id in default_titre_formation"
                            />
                            <label
                                t-att-for="'titre_formation_' + tit.name + '_' + str(tit_index)"
                                t-att-string="tit.name"
                            >
                                <t t-esc="tit.name" />
                            </label>
                        </t>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 col-sm-4 control-label" for="titre_formation_autre">
                        Titre_formation_autre
                    </label>
                    <div class="col-md-7 col-sm-8">
                        <input
                            type="text"
                            class="form-control"
                            name="titre_formation_autre"
                            t-att-value="default_titre_formation_autre"
                        />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 col-sm-4 control-label" for="titre_formation_is_autre">
                        Titre_formation_is_autre
                    </label>
                    <div class="col-md-7 col-sm-8">
                        <input
                            type="checkbox"
                            name="titre_formation_is_autre"
                            t-att-id="titre_formation_is_autre"
                            t-att-value="True"
                            t-att-checked="default_titre_formation_is_autre"
                        />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-3 col-sm-offset-4 col-sm-8 col-md-7">
                        <button class="btn btn-primary btn-lg">Submit Ceppp Formation</button>
                    </div>
                </div>
            </form>
        </t>
    </template>

