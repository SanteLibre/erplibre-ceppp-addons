<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="ceppp_patient_view_form" model="ir.ui.view">
        <field name="name">ceppp_patient_form</field>
        <field name="model">ceppp.patient</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" icon="fa-archive" name="toggle_active" type="object">
                            <field name="active" widget="boolean_button"/>
                        </button>
                    </div>
                    <field name="image" widget='image' class="oe_avatar" options='{"preview_image": "image_medium", "size": [90, 90]}'/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" default_focus="1"/>
                        </h1>
                    </div>
                    <group>
                        <field name="uuid" readonly="1" attrs="{'invisible':[('uuid','=',False)]}"/>
                        <field name="patient_partner_id"/>
                        <field name="recruteur_partner_id"/>
                        <field name="centre_recruteur"/>
                    </group>
                    <notebook>
                        <page name='infos' string="Infos">
                            <group>
                                <field name="date_naissance"/>
                                <field name="sexe"/>
                                <field name="genre"/>
                                <field name="genre_autre" attrs="{'invisible':[('genre','!=','autre')]}"/>
                                <field name="occupation"/>
                                <field name="occupation_autre" attrs="{'invisible':[('occupation','!=','autre')]}"/>
                                <field name="formation_professionnelle"/>
                                <field name="heritage_culturel"/>
                                <field name="langue_parle_ecrit"/>
                                <field name="langue_parle_ecrit_autre"
                                       attrs="{'invisible':[('langue_parle_ecrit','!=','autre')]}"/>
                                <field name="mode_communication_privilegie"/>
                                <field name="patient_actif"/>
                                <field name="competence_patient"/>
                            </group>
                        </page>
                        <page name='consentements' string="Consentements">
                            <group>
                            </group>
                        </page>
                        <page name='competences' string="CompÃ©tences">
                            <group>
                                <field name="competence_patient"/>
                            </group>
                        </page>
                        <page name='commentaires' string="Commentaires">
                            <group>
                                <field name="commentaires"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ceppp_patient_view_graph" model="ir.ui.view">
        <field name="name">ceppp_patient_graph</field>
        <field name="model">ceppp.patient</field>
        <field name="arch" type="xml">
            <graph string="Ceppp patient">
                <field name="uuid" type="row"/>
            </graph>
        </field>
    </record>

    <record id="ceppp_patient_view_kanban" model="ir.ui.view">
        <field name="name">ceppp_patient_kanban</field>
        <field name="model">ceppp.patient</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="uuid"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="uuid"/>
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="ceppp_patient_view_pivot" model="ir.ui.view">
        <field name="name">ceppp_patient_pivot</field>
        <field name="model">ceppp.patient</field>
        <field name="arch" type="xml">
            <pivot string="Ceppp patient">
                <field name="uuid" type="row"/>
            </pivot>
        </field>
    </record>

    <record id="ceppp_patient_view_search" model="ir.ui.view">
        <field name="name">ceppp_patient_search</field>
        <field name="model">ceppp.patient</field>
        <field name="arch" type="xml">
            <search string="Ceppp patient">
                <filter domain="[('uuid','!=',False)]" name="uuid" string="Code"/>
            </search>
        </field>
    </record>

    <record id="ceppp_patient_view_tree" model="ir.ui.view">
        <field name="name">ceppp_patient_tree</field>
        <field name="model">ceppp.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="uuid"/>
            </tree>
        </field>
    </record>

    <act_window
            id="ceppp_patient_patient_action_window"
            name="Patient"
            res_model="ceppp.patient"
            view_mode="kanban,tree,pivot,graph,form"
    />

</odoo>
